<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
<Properties>
        <Property name="filename">log/all.log</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <Layout type="PatternLayout" pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="File" fileName="${filename}" immediateFlush="false" append="false">
            <Layout type="PatternLayout" pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>